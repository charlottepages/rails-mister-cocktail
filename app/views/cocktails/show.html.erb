<%= render "shared/banner", cocktail: @cocktail %>

<div class="container" id="doses-control">
  <div class="box">
    <h3 class="text-center">Ingredients</h3>
    <ul>
      <% @doses.each do |dose| %>
        <li class="dose-item">
          <div class="text">
            <%= dose.description %> of <%= dose.ingredient.name %>
          </div>
          <%= link_to image_tag("cross.png", class:"delete-cross"), dose, method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="box">
    <h3 class="text-center">Add ingredients</h3>
    <%= simple_form_for [@cocktail, @dose], class:"dose-form" do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "Save", class: "btn-block btn-danger" %>
    <% end %>
  </div>
</div>


<%= link_to 'Back', cocktails_path %>
